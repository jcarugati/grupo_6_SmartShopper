<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body >
    <%-include('../partials/header.ejs')%>
    <h1 class="text-center text-success display-5 mt-5 pt-2">Administrador de Producto</h1>
    <section class="row">
        <article class="col-12" >
            <a class="nav-link" href="/admin/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
        </article>
    </section>
    <table class="table mt-5">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre del Producto</th>
                <th>Ver</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            <% for (const product of products) { %>
                <tr>
                    <td><%= product.id %> </td>
                    <td><%= product.name%> </td>
                    <td><a href="/products/<%= product.id%>"><ion-icon name="eye-outline"></ion-icon></a></td>
                    <td><a href="/products/<%= product.id%>/edit"><ion-icon name="create-outline"></ion-icon></a></td>
                </tr>
            <% } %>
            

        </tbody>
    </table>    
    <%-include('../partials/footer.ejs')%>
    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>
</html>