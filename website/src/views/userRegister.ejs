<!DOCTYPE html>
<html lang="es">

    <%- include('partials/head')%>

<body>
    <%-include('partials/header')%>
        <div class=" container-fluid col-lg-6 col-md-auto col-sm-auto">
            <div class="flex-direction-column register-box mt-5 mb-5">
                <h4 class="aling-flex-start text-muted font-weight-bold sansserif">Registrate</h4>
                <div class="  ">
                    <div class="card">
                        <div class="card-body d-flex flex-wrap">
                            <form action="/users/create" method="POST" enctype="multipart/form-data">
                                <div class="row form-items form-group justify-content-center">
                                    <div class=" d-flex flex-wrap col-6 form-items">
                                        <input type="text" class="form-control d-flex" id="name" name="name"
                                            placeholder="Name">
                                        <small id="nameHelp" class="form-text text-muted">Your name goes here</small>
                                    </div>
                                    <div class=" d-flex flex-wrap col-6 form-items">
                                        <input type="text" class="form-control d-flex" id="surname" name="surname"
                                            placeholder="Surname">
                                        <small id="surnameHelp" class="form-text text-muted">What's you surname</small>
                                    </div>
                                    <div class=" d-flex flex-wrap col-6 form-items">
                                        <input type="email" class="form-control d-flex" id="email" name="email"
                                            placeholder="Enter email">
                                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group d-flex flex-wrap col-6 form-items">
                                        <input type="password" class="form-control d-flex" id="password" name="password" placeholder="Password">
                                    </div>
                                    <div class="custom-file form-items mb-4">
                                        <input type="file" class="custom-file-input" id="imagen" name="imagen">
                                        <label id="file-name" class="custom-file-label" for="imagen">Selecciona una
                                            nueva
                                            imagen</label>
                                    </div>
                                    <div class="d-flex container form-button">
                                        <button type="submit" class="btn btn-primary col-lg-3 form-button">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Card Slidder ends here-->
            <!-- Footer -->
        </div>
    </div>
    <%- include('partials/footer') %>
    <script>
        $('#imagen').change(function () {
            $("#file-name").text(this.files[0].name);
        });
    </script>
</body>

</html>